{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "importHelpers": true
  },
  "include": ["core/**/*", "web/**/*"],
  "exclude": ["node_modules", "dist"]
}
